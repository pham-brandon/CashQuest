<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_background">

    <!-- Profile Section (Top) with custom background -->

    <!-- Button to Add Goals -->
    <!-- Goals List Section -->

    <LinearLayout
        android:id="@+id/profile_section"
        android:layout_width="338dp"
        android:layout_height="111dp"
        android:layout_marginTop="32dp"
        android:background="@color/button_color"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <!-- Username TextView -->
        <TextView
            android:id="@+id/goals_user_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/vt323_regular" />

        <!-- Level and EXP Bar -->
        <TextView
            android:id="@+id/user_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/exp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/vt323_regular"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/star_goal_24dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="50"
            android:progressTint="@color/yellow"
            android:fontFamily="@font/vt323_regular"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/add_goal_button"
        android:layout_width="117dp"
        android:layout_height="53dp"
        android:background="@color/light_purple"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/vt323_regular"
        android:text="@string/create_goal"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="159dp" />

    <LinearLayout
        android:id="@+id/goals_list_section"
        android:layout_width="420dp"
        android:layout_height="394dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_to_rightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_section"
        android:layout_marginEnd="0dp">

        <!-- Goals example... replace with RecyclerView -->
        <TextView
            android:id="@+id/goals_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/goals_progress_text"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/vt323_regular"
            android:textStyle="bold"

            />


        <LinearLayout
            android:id="@+id/goals_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Example goal items -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/goalsTitle"
                android:textSize="16sp"
                android:fontFamily="@font/vt323_regular"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:drawableStartCompat="@drawable/star_goal_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/goalsTitle"
                android:textSize="16sp"
                android:fontFamily="@font/vt323_regular"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:drawableStartCompat="@drawable/star_goal_24dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/goalsTitle"
                android:textSize="16sp"
                android:fontFamily="@font/vt323_regular"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:drawableStartCompat="@drawable/star_goal_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/goalsTitle"
                android:textSize="16sp"
                android:fontFamily="@font/vt323_regular"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:drawableStartCompat="@drawable/star_goal_24dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/goalsTitle"
                android:textSize="16sp"
                android:fontFamily="@font/vt323_regular"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:drawableStartCompat="@drawable/star_goal_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/goalsTitle"
                android:textSize="16sp"
                android:fontFamily="@font/vt323_regular"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:drawableStartCompat="@drawable/star_goal_24dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/goalsTitle"
                android:textSize="16sp"
                android:fontFamily="@font/vt323_regular"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:drawableStartCompat="@drawable/star_goal_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/goalsTitle"
                android:textSize="16sp"
                android:fontFamily="@font/vt323_regular"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:drawableStartCompat="@drawable/star_goal_24dp" />

        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/purple_background">

    <!-- Register Title -->
    <TextView
        android:id="@+id/registerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/vt323_regular"
        android:text="@string/registerTitle"
        android:textColor="@color/white"
        android:textSize="45sp" />

    <!-- Username Field -->
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerTitle"
        android:autofillHints="username"
        android:layout_marginTop="18dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:background="@drawable/edit_text_background"
        android:padding="15dp"
        android:textColorHint="@color/grey"
        android:textColor="@color/grey"
        android:fontFamily="@font/vt323_regular"
        android:textSize="25sp"/>

    <!-- Email Address Field -->
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:autofillHints="username"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:background="@drawable/edit_text_background"
        android:padding="15dp"
        android:textColorHint="@color/grey"
        android:textColor="@color/grey"
        android:fontFamily="@font/vt323_regular"
        android:textSize="25sp"/>

    <!-- Password Field -->
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:autofillHints="username"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_background"
        android:padding="15dp"
        android:textColorHint="@color/grey"
        android:textColor="@color/grey"
        android:fontFamily="@font/vt323_regular"
        android:textSize="25sp"/>

    <!-- ConfirmPassword Field -->
    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:autofillHints="username"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="@string/confirmPassword"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_background"
        android:padding="15dp"
        android:textColorHint="@color/grey"
        android:textColor="@color/grey"
        android:fontFamily="@font/vt323_regular"
        android:textSize="25sp"/>

    <!-- Terms and Privacy -->
    <CheckBox
        android:id="@+id/termsCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirmPassword"
        android:layout_marginTop="0dp"
        android:layout_marginStart="35dp"
        android:text="@string/agree"
        android:textColor="@color/grey"
        android:fontFamily="@font/vt323_regular"
        android:buttonTint="@color/grey"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/privacy_policy_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/termsCheckbox"
        android:layout_alignBaseline="@id/termsCheckbox"
        android:layout_marginStart="4dp"
        android:text="@string/privacyPolicyLink"
        android:textColor="@color/blue"
        android:fontFamily="@font/vt323_regular"
        android:textSize="16sp"/>

    <!-- Register Button -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/termsCheckbox"
        android:text="@string/register"
        android:backgroundTint="@null"
        android:background="@drawable/register_button_background"
        android:textColor="@color/white"
        android:padding="0dp"
        android:fontFamily="@font/vt323_regular"
        android:textSize="50sp"
        />

    <!-- Login  -->
    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerButton"
        android:layout_marginTop="35dp"
        android:layout_marginStart="40dp"
        android:text="@string/alreadyAccount"
        android:textColor="@color/light_blue"
        android:fontFamily="@font/vt323_regular"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/loginLinkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_below="@id/loginText"
        android:layout_marginTop="0dp"
        android:layout_marginStart="20dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/vt323_regular"
        android:textSize="20sp"/>


</RelativeLayout >